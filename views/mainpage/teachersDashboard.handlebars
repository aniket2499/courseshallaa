
<div class="container-fluid p-5">
    <div class="row border-bottom border-secondary ">
      <h3 style="font-family: 'Macondo', cursive;color:blue">Courses Under Development</h3>
    </div>
    <div class="row bg-light">
      {{#each courses.not_deployed_courses}}
      <div class="card m-3" style="width: 18rem;">
        <img class="card-img-top" src="/public/images/projectimages.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{this.coursename}}</h5>
          <div class="row">
            <div class="col-5">
              <a href="/mainpage/details/{{this.coursename}}" class="btn btn-dark">Details</a>
            </div>
            <div class="col-6">
              <a href="/mainpage/videos/{{this.coursename}}" class="btn btn-dark"> Videos </a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      <div class="row bg-light d-flex justify-content-center p-5">
        <a href="/mainpage/createcourse" class="btn btn-success w-25"> Create Course </a>
      </div>
    </div>
    
    <div class="row border-bottom border-secondary border-1">
      <h3 style="font-family: 'Macondo', cursive;color:blue">Courses Deployed</h3>
    </div>
    <div class="row">
      {{#each courses.deployed_courses}}
        <div class="card m-3" style="width: 20rem;">
          <img class="card-img-top" src="/public/images/projectimages.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{this.coursename}}</h5>
            {{!-- <p class="card-text">{{this.description}}</p> --}}
            <div class="row">
              <div class="col-3">
                <a href="/mainpage/details/{{this.coursename}}" class="btn btn-dark">Details</a>
              </div>
              <div class="col-3">
                <a href="/mainpage/videos/{{this.coursename}}" class="btn btn-dark"> Videos </a>
              </div>
              <div class="col-6">
                <a href="/grades/{{this.coursename}}" class="btn btn-dark"> Submissions </a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
    </div>
</div>


