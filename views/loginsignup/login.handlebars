<form action="/login" method="POST">
    <div class="row pt-5">
        <div class="col-4">
        </div>
        <div class="col-4">
            <div class="row mb-3">
                <h3 style="font-family: 'Macondo', cursive;color:blue">Log In</h3>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label"> Username </label>
                <input type="text" class="form-control" id="username" name="username" onblur="usernameFieldValidation()" required>
                {{!-- <div id="username-error" class="hide">*enter valid username</div> --}}
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"> Password </label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary"> Log In </button> 
            </div>
            {{#if hasErrors}}
            <div class="Error" style="color:red">{{error}}</div>
            {{/if}}

            <div class="mt-3">
                Did you registered? <a href="/login/signup">Signup</a>
            </div>
        </div>
        <div class="col-4">
            
        </div>
    </div>
</form>
